{
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article",
    "description": "Travel Articles"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 10,
      "required": true,
      "unique": true
    },
    "content": {
      "type": "text"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "author": {
      "model": "user",
      "via": "articles",
      "plugin": "users-permissions"
    }
  }
}